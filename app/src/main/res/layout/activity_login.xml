<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="280dp"
        android:layout_height="284dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablayout" />

    <TextView
        android:id="@+id/tvcreateacc"
        android:layout_width="162dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:text="CREATE AN ACCOUNT"
        android:textAlignment="center"
        android:textColor="#651BF7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="227dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:text="Connect With Other Ways"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcreateac" />

    <Button
        android:id="@+id/btnfb"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:background="#415EA2"
        android:drawableLeft="@drawable/fbook"
        android:padding="0dp"
        android:text="Facebook"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/btngoogle"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btngoogle"
        android:layout_width="129dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="56dp"
        android:background="#555D9C"
        android:drawableLeft="@drawable/googl"
        android:padding="10dp"
        android:text="Google"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="270dp"
        android:layout_height="37dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"

            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabsms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS" />


    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
