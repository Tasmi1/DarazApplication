<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F84D17"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logo"
            android:textColor="#fff"
            android:textSize="5dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="Hello, Welcome to Daraz ! "
            android:textColor="#fff"
            android:textSize="18dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/se"

            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#F84D17"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnloginsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = " Login / Sign Up"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginTop="45dp"
            android:background="#FFFFFF"
            android:textColor="#F84D17"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold|normal"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvmyorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/tvviewall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All >"
            android:textStyle="normal"
            android:textColor="#0527F0"
            android:layout_marginLeft="240dp"
            android:textSize="15dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:src="@drawable/card"
            android:layout_marginLeft="25dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:src="@drawable/review"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:src="@drawable/cancelltion"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Pay"
            android:layout_marginLeft="25dp"
            android:textStyle="bold|normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="0dp"
            android:text="To Review"
            android:textStyle="bold|normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="My Returns"
            android:textStyle="bold|normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="My Cancellat.."
            android:textStyle="bold|normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E7E5E5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tvourservices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Service"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:src="@drawable/envolp"
            android:layout_marginLeft="25dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:src="@drawable/review"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:src="@drawable/payment"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:src="@drawable/help"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:layout_marginLeft="15dp"
            android:textStyle="bold|normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="0dp"
            android:text="My Review"
            android:textStyle="bold|normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Payment Option"
            android:textStyle="bold|normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Help"
            android:textStyle="bold|normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E7E5E5"
        />


</LinearLayout>